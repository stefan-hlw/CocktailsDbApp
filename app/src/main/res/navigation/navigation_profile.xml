<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_profile"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.cocktailsdbapp.ui.authorization.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_FilterFragment"
            app:destination="@id/filterFragment" />
    </fragment>

    <fragment
        android:id="@+id/filterFragment"
        android:name="com.example.cocktailsdbapp.ui.filter.FilterFragment"
        android:label="FilterFragment" >
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.cocktailsdbapp.ui.search.SearchFragment"
        android:label="SearchFragment" >
    </fragment>

    <action
        android:id="@+id/action_global_search_fragment"
        app:destination="@id/searchFragment" />

    <action
        android:id="@+id/action_global_filter_fragment"
        app:destination="@id/filterFragment" />

</navigation>